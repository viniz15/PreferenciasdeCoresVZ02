<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#454545">

            <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_cor1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:backgroundTint="@color/red"/>

            <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_cor2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:backgroundTint="@color/blue"/>

            <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_cor3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:backgroundTint="@color/green"/>

            <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_cor4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:backgroundTint="@color/orange"/>

            <androidx.appcompat.widget.AppCompatButton android:id="@+id/btn_cor5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:backgroundTint="@color/violet"/>

        </LinearLayout>
    </HorizontalScrollView>

    <Button android:id="@+id/trocar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/black"
        android:text="Salvar Cor"/>

</LinearLayout>